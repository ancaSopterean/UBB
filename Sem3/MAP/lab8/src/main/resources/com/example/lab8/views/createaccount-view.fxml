<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab8.controller.CreateAccountController">
   <children>
      <Label layoutX="69.0" layoutY="28.0" text="create a new account">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Label layoutX="124.0" layoutY="60.0" text="it's quick and easy" />
      <TextField fx:id="firstNameTextField" alignment="TOP_CENTER" layoutX="99.0" layoutY="106.0" promptText="first name" />
      <TextField fx:id="lastNameTextField" alignment="TOP_CENTER" layoutX="99.0" layoutY="154.0" promptText="last name" />
      <TextField fx:id="usernameTextField" alignment="TOP_CENTER" layoutX="100.0" layoutY="200.0" promptText="username" />
      <Hyperlink layoutX="104.0" layoutY="351.0" onAction="#handleHyperlink" text="already have an account?" />
      <Button layoutX="130.0" layoutY="288.0" mnemonicParsing="false" onAction="#handleSignUp" prefHeight="38.0" prefWidth="89.0" text="sign up">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <PasswordField fx:id="passwordField" alignment="CENTER" layoutX="100.0" layoutY="245.0" promptText="password" />
   </children>
</AnchorPane>
